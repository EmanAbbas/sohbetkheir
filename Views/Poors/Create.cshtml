@model Gam3iaWeb.Models.PoorViewModel

@{
    ViewBag.Title = "إضافة محتاج";
}
<div class="container">
    <h2>إضافة محتاج</h2>
    @if (Session["caller"]!=null&&Session["caller"].ToString() == "CaseStudy")
    {
        <p class="label-info">من فضلك املأ بيانات المحتاج أولا قبل بحث الحاله</p>
    }
    @if (Session["caller"] != null && Session["caller"].ToString() == "Loan")
    {
        <p class="label-info">من فضلك املأ بيانات المحتاج أولا قبل إضافة القرض الحسن</p>
    }
    @if (Session["caller"] != null && Session["caller"].ToString() == "StudentAid")
    {
        <p class="label-info">من فضلك املأ بيانات الطالب أولا قبل ملء بيانات المساعدة</p>
    }
    @if (Session["caller"] != null && Session["caller"].ToString() == "GeneralAid")
    {
        <p class="label-info">من فضلك املأ بيانات الحاله أولا قبل ملء بيانات المساعدة</p>
    }
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.PoorNID, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5 col-md-offset-1">
                    @Html.EditorFor(model => model.PoorNID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PoorNID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PoorName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5 col-md-offset-1">
                    @Html.EditorFor(model => model.PoorName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PoorName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.RegisterDate, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5 col-md-offset-1">
                    @Html.EditorFor(model => model.RegisterDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RegisterDate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.CityID, "البلد", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5 col-md-offset-1">
                    @Html.DropDownList("CityID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CityID, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-5 col-md-offset-1">
                    <input type="submit" value="إضافة" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("عودة إلي قائمة الحالات", "Index")
    </div>
</div>
