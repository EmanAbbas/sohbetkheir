@model IEnumerable<Gam3iaWeb.Donator>

@{
    ViewBag.Title = "قائمة المتبرعين";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>قائمة المتبرعين</h2>

<p class="float_left">
    @Html.ActionLink("إدخال بيانات متبرع جديد", "Create")
</p>
<table class="table table-condensed datatable4">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.DonatorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DonatorPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Job)
            </th>
            <th></th>
        </tr>
    </thead>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DonatorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DonatorPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tag)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Job)
        </td>
        <td>
            @Html.ActionLink("تعديل", "Edit", new { id=item.ID }) |
            @Html.ActionLink("التفاصيل", "Details", new { id=item.ID }) |
            @Html.ActionLink("حذف", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
