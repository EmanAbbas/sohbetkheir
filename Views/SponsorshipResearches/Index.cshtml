@model IEnumerable<Gam3iaWeb.SponsorshipResearch>

@{
    ViewBag.Title = "قائمة أبحاث الكفاله";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>قائمة أبحاث الكفاله</h2>

<p class="float_left">
    @Html.ActionLink("بحث كفالة جديد", "Create")
</p>
<table class="table table-condensed datatable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PoorID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResearcherName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResearchDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResearchResponse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResearchResults)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SponsorshipStartDate)
            </th>


          
            <th></th>
        </tr>
    </thead>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Poor.PoorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ResearcherName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ResearchDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ResearchResponse)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ResearchResults)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SponsorshipStartDate)
        </td>
       
        
       
        <td>
            @Html.ActionLink("تعديل", "Edit", new { id=item.ID }) |
            @Html.ActionLink("التفاصيل", "Details", new { id=item.ID }) |
            @Html.ActionLink("حذف", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
